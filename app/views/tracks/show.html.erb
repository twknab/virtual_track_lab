<div class="container">
  <div class="row col-sm-3 m-3">
    <a href="/" class="btn btn-primary" role="button">Back to Tracks</a>
  </div>
  <div class="row m-3">
    <h1><%= @track.title %></h1>
    <hr />
    <p><%= @track.description %></p>
    <hr />
    <img src="<%= @track.thumbnail %>" class="img-fluid img-thumbnail w-100 mb-3 shadow-sm rounded-0" alt="Scan1">
    <a href="<%= @track.scan_url %>" class="btn btn-primary" role="button">View 3D Scan</a>
  </div>
</div>